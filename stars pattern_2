#include <iostream>
using namespace std;

int main()
{
    int n;
    cin>>n;
    
    for(int i=0;i<n;i++)
    {
        int spaces=n-i;
        for(int j=1;j<=spaces;j++)
        {
            cout<<" ";
        }
        
        int k=2*i+1;
        for(int j=1;j<=k;j++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
    
    for(int i=n;i>=0;i--)
    {
        int spaces=n-i;
        for(int j=1;j<=spaces;j++)
        {
            cout<<" ";
        }
        
        int k=2*i+1;
        for(int j=1;j<=k;j++)
        {
            cout<<"*";
        }
        cout<<endl;
    }

    return 0;
}
